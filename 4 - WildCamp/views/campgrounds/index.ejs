<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to WildCamp </h1>
            <p> View our hand-picked campgrounds </p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>        
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-md-6 col-sm-12"> 
                <div class="card">
                    <img class="img-fluid card-img-top" src="<%= campground.image %>"/>
                    <div class="card-body">
                        <p class="float-right"><%= campground.price %>â‚¬/night</p>
                        <h3 class="card-title"><a><%= campground.name %></a></h3>
                        <p>
                            <a href="campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm text-white float-right">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>


</div>


<% include ../partials/footer %>

