<% include ../partials/header %>

<h1>Edit <%= campground.name %></h1>

<div class="container">
        <div style="width: 60%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label> Camp name </label>
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <label> Image URL </label>
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <label> Price </label>
                    <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.00" step="0.1">
                </div>
                <div class="form-group">
                    <label> Description </label>
                    <textarea class="form-control" type="text" name="campground[description]" rows="10">
                        <%= campground.description %>
                    </textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <button class="btn btn-md btn-primary btn-block"> Submit! </button>
            </form>
            
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>
        

</div>



<% include ../partials/footer %>